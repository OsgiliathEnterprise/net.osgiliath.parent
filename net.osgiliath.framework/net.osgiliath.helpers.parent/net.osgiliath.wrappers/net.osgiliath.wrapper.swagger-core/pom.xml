<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>net.osgiliath.wrappers</groupId>
		<artifactId>net.osgiliath.wrappers</artifactId>
		<version>0.0.9</version>
	</parent>
	<artifactId>net.osgiliath.wrapper.swagger-core</artifactId>
	<name>Wrapper for Swagger core module</name>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.4</version>
				<executions>
					<execution>
						<id>assembly:package</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<appendAssemblyId>false</appendAssemblyId>
							<descriptors>
								<descriptor>src/main/resources/assembly.xml</descriptor>
							</descriptors>
							<archive>
								<manifestFile>src/main/resources/META-INF/MANIFEST.MF</manifestFile>
							</archive>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>copy</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>org.apache.servicemix.bundles</groupId>
									<artifactId>org.apache.servicemix.bundles.swagger-core</artifactId>
									<overWrite>true</overWrite>
									<outputDirectory>${project.build.directory}/dependencies</outputDirectory>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
					<execution>
						<id>get-manifest</id>
						<phase>process-sources</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>org.apache.servicemix.bundles</groupId>
									<artifactId>org.apache.servicemix.bundles.swagger-core</artifactId>
									<includes>META-INF/MANIFEST.MF</includes>
									<overWrite>true</overWrite><!-- TODO set to true -->
									<outputDirectory>${project.build.resources[0].directory}/</outputDirectory>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<executions>
					<execution>
						<phase>process-resources</phase>
						<goals>
							<goal>java</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<mainClass>net.osgiliath.helpers.manifest.transformer.ManifestBundleImportVersionUpdaterTransformer</mainClass>
					<arguments>
						<argument>overrides=scala=[2,3);scala.xml=[1.0.0,3.0.0);scala.collection=[2,3);scala.collection.convert=[2,3);scala.collection.generic=[2,3);scala.collection.immutable=[2,3);scala.collection.mutable=[2,3);scala.math=[2,3);scala.reflect=[2,3);scala.runtime=[2,3);scala.util.matching=[2,3)</argument>
						<argument>basedir=${project.basedir}</argument>
						<argument>bundleClasspath=org.apache.servicemix.bundles.swagger-core-${org.apache.servicemix.bundles.swagger.version}</argument>
					</arguments>
					<executableDependency>
						<groupId>net.osgiliath.framework</groupId>
						<artifactId>net.osgiliath.helpers.manifest.transformer</artifactId>
					</executableDependency>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.apache.servicemix.bundles</groupId>
			<artifactId>org.apache.servicemix.bundles.swagger-core</artifactId>
		</dependency>
		<dependency>
			<groupId>net.osgiliath.framework</groupId>
			<artifactId>net.osgiliath.helpers.manifest.transformer</artifactId>
			<version>${project.version}</version>
		</dependency>
	</dependencies>
</project>
