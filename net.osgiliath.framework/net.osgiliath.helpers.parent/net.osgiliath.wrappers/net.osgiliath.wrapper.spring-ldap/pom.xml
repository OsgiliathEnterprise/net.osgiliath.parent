<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>net.osgiliath.wrappers</groupId>
		<artifactId>net.osgiliath.wrappers</artifactId>
		<version>0.1.8-SNAPSHOT</version>
	</parent>
	<artifactId>net.osgiliath.wrapper.spring-ldap</artifactId>
	<name>Spring-ldap wrapper</name>
	<description>Spring ldap manifest updates</description>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>
					<execution>
						<id>assembly:package</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<appendAssemblyId>false</appendAssemblyId>
							<descriptors>
								<descriptor>src/main/resources/assembly.xml</descriptor>
							</descriptors>
							<archive>
								<manifestFile>src/main/resources/META-INF/MANIFEST.MF</manifestFile>
							</archive>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-clean-plugin</artifactId>
				<configuration>
					<filesets>
						<fileset>
							<directory>src/main/resources</directory>
							<includes>
								<include>**/*.MF</include>
							</includes>
						</fileset>
					</filesets>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>copy</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>org.apache.servicemix.bundles</groupId>
									<artifactId>org.apache.servicemix.bundles.spring-ldap</artifactId>
									<overWrite>true</overWrite>
									<outputDirectory>${project.build.directory}/dependencies</outputDirectory>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
					<execution>
						<id>get-manifest</id>
						<phase>process-sources</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>org.apache.servicemix.bundles</groupId>
									<artifactId>org.apache.servicemix.bundles.spring-ldap</artifactId>
									<includes>META-INF/MANIFEST.MF</includes>
									<overWrite>true</overWrite><!-- TODO set to true -->
									<outputDirectory>${project.build.resources[0].directory}/</outputDirectory>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<executions>
					<execution>
						<phase>process-resources</phase>
						<goals>
							<goal>java</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<mainClass>net.osgiliath.helpers.manifest.transformer.ManifestBundleImportVersionUpdaterTransformer</mainClass>
					<arguments>
						<argument>overrides=org.springframework.jdbc.datasource=[4.0.0,5.0.0);org.springframework.orm.hibernate3=[4.0.0,5.0.0);org.springframework.beans=[4.0.0,5.0.0);org.springframework.beans.factory=[4.0.0,5.0.0);org.springframework.beans.factory.config=[4.0.0,5.0.0);org.springframework.context=[4.0.0,5.0.0);org.springframework.core=[4.0.0,5.0.0);org.springframework.core.io=[4.0.0,5.0.0);org.springframework.dao=[4.0.0,5.0.0);org.springframework.transaction=[4.0.0,5.0.0);org.springframework.transaction.support=[4.0.0,5.0.0);org.springframework.util=[4.0.0,5.0.0)</argument>
						<argument>basedir=${project.basedir}</argument>
						<argument>bundleClasspath=org.apache.servicemix.bundles.spring-ldap-${org.apache.servicemix.bundles_org.apache.servicemix.bundles.spring-ldap.version}.jar</argument>
					</arguments>
					<executableDependency>
						<groupId>net.osgiliath.framework</groupId>
						<artifactId>net.osgiliath.helpers.manifest.transformer</artifactId>
					</executableDependency>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.apache.servicemix.bundles</groupId>
			<artifactId>org.apache.servicemix.bundles.spring-ldap</artifactId>
		</dependency>
		<dependency>
			<groupId>net.osgiliath.framework</groupId>
			<artifactId>net.osgiliath.helpers.manifest.transformer</artifactId>
			<version>${project.version}</version>
		</dependency>
	</dependencies>
</project>