<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>net.osgiliath.wrappers</groupId>
		<artifactId>net.osgiliath.wrappers</artifactId>
		<version>0.1.6-SNAPSHOT</version>
	</parent>
	<artifactId>net.osgiliath.wrapper.spring-batch-core</artifactId>
	<name>spring-batch-core wrapper</name>
	<description>Spring4 support for spring-batch-core</description>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>
					<execution>
						<id>assembly:package</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<appendAssemblyId>false</appendAssemblyId>
							<descriptors>
								<descriptor>src/main/resources/assembly.xml</descriptor>
							</descriptors>
							<archive>
								<manifestFile>src/main/resources/META-INF/MANIFEST.MF</manifestFile>
							</archive>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>copy</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>org.springframework.batch</groupId>
									<artifactId>spring-batch-core</artifactId>
									<overWrite>true</overWrite>
									<outputDirectory>${project.build.directory}/dependencies</outputDirectory>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
					<execution>
						<id>get-manifest</id>
						<phase>process-sources</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>org.springframework.batch</groupId>
									<artifactId>spring-batch-core</artifactId>
									<includes>META-INF/MANIFEST.MF</includes>
									<overWrite>true</overWrite><!-- TODO set to true -->
									<outputDirectory>${project.build.resources[0].directory}/</outputDirectory>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<executions>
					<execution>
						<phase>process-resources</phase>
						<goals>
							<goal>java</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<mainClass>net.osgiliath.helpers.manifest.transformer.ManifestBundleImportVersionUpdaterTransformer</mainClass>
					<arguments>
						<argument>overrides=org.springframework.aop=[4,5);org.springframework.aop.framework=[4,5);org.springframework.aop.scope=[4,5);org.springframework.aop.support=[4,5);org.springframework.aop.target=[4,5);org.springframework.beans=[4,5);org.springframework.beans.factory=[4,5);org.springframework.beans.factory.annotation=[4,5);org.springframework.beans.factory.config=[4,5);org.springframework.beans.factory.parsing=[4,5);org.springframework.beans.factory.support=[4,5);org.springframework.beans.factory.xml=[4,5);org.springframework.classify=[4,5);org.springframework.context=[4,5);org.springframework.context.annotation=[4,5);org.springframework.context.event=[4,5);org.springframework.context.support=[4,5);org.springframework.core=[4,5);org.springframework.core.annotation=[4,5);org.springframework.core.io=[4,5);org.springframework.core.serializer=[4,5);org.springframework.core.task=[4,5);org.springframework.core.type=[4,5);org.springframework.dao=[4,5);org.springframework.jdbc.core=[4,5);org.springframework.jdbc.core.simple=[4,5);org.springframework.jdbc.datasource=[4,5);org.springframework.jdbc.support.incrementer=[4,5);org.springframework.jdbc.support.lob=[4,5);org.springframework.stereotype=[4,5);org.springframework.transaction=[4,5);org.springframework.transaction.annotation=[4,5);org.springframework.transaction.interceptor=[4,5);org.springframework.transaction.support=[4,5);org.springframework.util=[4,5);org.springframework.util.xml=[4,5)</argument>
						<argument>basedir=${project.basedir}</argument>
						<argument>bundleClasspath=spring-batch-core-${org.springframework.batch_spring-batch-core.version}</argument>
					</arguments>
					<executableDependency>
						<groupId>net.osgiliath.framework</groupId>
						<artifactId>net.osgiliath.helpers.manifest.transformer</artifactId>
					</executableDependency>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.springframework.batch</groupId>
			<artifactId>spring-batch-core</artifactId>
		</dependency>
		<dependency>
			<groupId>net.osgiliath.framework</groupId>
			<artifactId>net.osgiliath.helpers.manifest.transformer</artifactId>
			<version>${project.version}</version>
		</dependency>
	</dependencies>
</project>