			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<configuration>
					<instructions>
						<_include>-osgi.bnd</_include>
						<Bundle-Version>${org.apache.camel_camel-catalog.version}</Bundle-Version>
						<Embed-Dependency>camel-catalog,!*</Embed-Dependency>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.apache.camel</groupId>
			<artifactId>camel-catalog</artifactId>
		</dependency>
