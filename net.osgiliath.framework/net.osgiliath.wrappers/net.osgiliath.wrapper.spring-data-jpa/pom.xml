<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>net.osgiliath.wrappers</groupId>
		<artifactId>net.osgiliath.wrappers</artifactId>
		<version>0.3.5</version>
	</parent>
	<artifactId>net.osgiliath.wrapper.spring-data-jpa</artifactId>
	<name>Spring-data-jpa wrapper</name>
	<description>Adds pax-cdi requirement and capabilities to spring-data-jpa</description>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-clean-plugin</artifactId>
				<configuration>
					<filesets>
						<fileset>
							<directory>src/main/resources</directory>
							<includes>
								<include>**/*.MF</include>
							</includes>
						</fileset>
					</filesets>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>copy</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>org.springframework.data</groupId>
									<artifactId>spring-data-jpa</artifactId>
									<overWrite>true</overWrite>
									<outputDirectory>${project.build.directory}/classes</outputDirectory>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
					<execution>
						<id>get-manifest</id>
						<phase>process-sources</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>org.springframework.data</groupId>
									<artifactId>spring-data-jpa</artifactId>
									<includes>META-INF/MANIFEST.MF</includes>
									<overWrite>true</overWrite>
									<outputDirectory>${project.build.resources[0].directory}/</outputDirectory>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<configuration>
					<instructions>
						<_include>src/main/resources/META-INF/MANIFEST.MF</_include>
						<Bundle-ClassPath>.,spring-data-jpa-${org.springframework.data_spring-data-jpa.version}.jar,{maven-dependencies}</Bundle-ClassPath>
						<Require-Capability>osgi.extender;filter:="(osgi.extender=pax.cdi)"</Require-Capability>
						<Provide-Capability>org.ops4j.pax.cdi.extension;extension="spring-data-jpa"</Provide-Capability>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.springframework.data</groupId>
			<artifactId>spring-data-jpa</artifactId>
		</dependency>
	</dependencies>
</project>