        <bundle dependency="true" start-level="30">mvn:org.ow2.asm/asm-all/${org.ow2.asm_asm-all.version}</bundle>
        
        <bundle start-level="30">mvn:org.eclipse.jetty/jetty-continuation/${org.eclipse.jetty.aggregate_jetty-all-server.version}</bundle>
		<bundle start-level="30">mvn:org.eclipse.jetty/jetty-http/${org.eclipse.jetty.aggregate_jetty-all-server.version}</bundle>
