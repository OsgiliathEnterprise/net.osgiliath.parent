		<bundle start-level="30">mvn:org.eclipse.jetty/jetty-servlets/${org.eclipse.jetty.aggregate_jetty-all-server.version}</bundle>
		<bundle start-level="30">mvn:org.eclipse.jetty/jetty-util/${org.eclipse.jetty.aggregate_jetty-all-server.version}</bundle>
