		<bundle start-level="30">mvn:org.eclipse.jetty/jetty-webapp/${org.eclipse.jetty.aggregate_jetty-all-server.version}</bundle>
		<bundle start-level="30">mvn:org.eclipse.jetty/jetty-jaas/${org.eclipse.jetty.aggregate_jetty-all-server.version}</bundle>
		<bundle start-level="30">mvn:org.eclipse.jetty/jetty-xml/${org.eclipse.jetty.aggregate_jetty-all-server.version}</bundle>
		<bundle start-level="30">mvn:org.eclipse.jetty/jetty-client/${org.eclipse.jetty.aggregate_jetty-all-server.version}</bundle>
		<bundle start-level="30">mvn:org.eclipse.jetty.websocket/websocket-server/${org.eclipse.jetty.aggregate_jetty-all-server.version}</bundle>
		<bundle start-level="30">mvn:org.eclipse.jetty.websocket/websocket-client/${org.eclipse.jetty.aggregate_jetty-all-server.version}</bundle>
