<features xmlns="http://karaf.apache.org/xmlns/features/v1.3.0" name="${project.artifactId}-${project.version}">
	<repository>mvn:${project.groupId}/net.osgiliath.feature.pax-cdi/${project.version}/xml/features</repository>
	<repository>mvn:org.apache.karaf.features/enterprise/${org.apache.karaf.features_enterprise.version}/xml/features</repository>
	<repository>mvn:${project.groupId}/net.osgiliath.feature.common/${project.version}/xml/features</repository>
	<repository>mvn:${project.groupId}/net.osgiliath.feature.karaf-enterprise/${project.version}/xml/features</repository>
	 <feature name="osgiliath-cdi-tx-weld" version="${org.ops4j.pax.cdi_pax-cdi-features.version}" description="OSGi Support for Transactional CDI" resolver="(obr)">
    	<feature version="${org.apache.aries.transaction.version}">osgiliath-transaction</feature>
    	<bundle dependency='true'>mvn:org.apache.xbean/xbean-blueprint/${xbean.version}</bundle>
    	 <conditional>
            <condition>osgiliath-openjpa</condition>
        	<bundle dependency="true">mvn:org.apache.servicemix.bundles/org.apache.servicemix.bundles.ant/${org.apache.servicemix.bundles_org.apache.servicemix.bundles.ant.version}</bundle>
        </conditional>
    	<bundle>mvn:${project.groupId}/net.osgiliath.helper.cdi.tx/${project.version}</bundle>
    </feature>
	<feature name='osgiliath-cdi' version='${project.version}' resolver="(obr)" description="Enables Context dependency injection and CDI configuration admin handling in your project">
		<feature>scr</feature>
		<bundle dependency="true" start-level="10">mvn:javax.annotation/javax.annotation-api/${javax.annotation_javax.annotation-api.version}</bundle>
		<feature>osgiliath-weld</feature>
		<feature version="${org.ops4j.pax.cdi.version}">osgiliath-cdi-tx-weld</feature>
		<bundle>mvn:${project.groupId}/net.osgiliath.helper.deltaspike.configadmin/${project.version}</bundle>
		<bundle>mvn:org.apache.deltaspike.core/deltaspike-core-impl/${org.apache.deltaspike.core_deltaspike-core-impl.version}</bundle>
		<bundle>mvn:net.osgiliath.framework/net.osgiliath.helper.cdi.eager/${project.version}</bundle>
		<bundle>mvn:org.apache.deltaspike.core/deltaspike-core-api/${org.apache.deltaspike.core_deltaspike-core-api.version}</bundle>
	</feature>
	<feature name='osgiliath-cdi-web' version='${project.version}' resolver="(obr)" description="Enables Context dependency injection for Web App">
		<feature>osgiliath-cdi</feature>
		<feature>osgilath-pax-cdi-1.2-web-weld</feature>
	</feature>
</features>
