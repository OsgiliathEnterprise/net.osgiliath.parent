<?xml version="1.0" encoding="ISO-8859-1"?>

<project name="Osgiliath Enterprise framework" xmlns="http://maven.apache.org/DECORATION/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/DECORATION/1.0.0 http://maven.apache.org/xsd/decoration-1.0.0.xsd">

	<bannerLeft>
		<name>Github</name>
		<href>http://${project.artifactId}</href>
	</bannerLeft>

	<skin>
		<groupId>org.apache.maven.skins</groupId>
		<artifactId>maven-fluido-skin</artifactId>
		<version>1.3.1</version>
	</skin>
	<custom>
		<fluidoSkin>
			<sideBarEnabled>true</sideBarEnabled>
			<topBarEnabled>true</topBarEnabled>
			<topBarIcon>
				<name>Maven Fluido Skin</name>
				<alt>Maven Fluido Skin</alt>
				<src>http://${project.organization.name}.github.io/${project.artifactId}/images/logo.png</src>
				<href>http://${project.organization.name}.github.io/${project.artifactId}/index.html</href>
			</topBarIcon>
			<googleSearch>
				<sitesearch />
			</googleSearch>
			<sourceLineNumbersEnabled>true</sourceLineNumbersEnabled>
			<gitHub>
				<projectId>${project.organization}/${project.artifactId}</projectId>
				<ribbonOrientation>right</ribbonOrientation>
				<ribbonColor>green</ribbonColor>
			</gitHub>
			<googlePlusOne />
			<facebookLike />
		</fluidoSkin>
		<custom.fluidoSkin.googleSearch.sitesearch>http://${project.organization.name}.github.io/${project.artifactId}/</custom.fluidoSkin.googleSearch.sitesearch>
	</custom>


	<body>
		<links>
			<item name="${project.organization.name} repo" href="https://github.com/${project.organization.name}/${project.artifactId}" />
			<item name="${project.organization.name} documentation" href="http://${project.organization.name}.github.io/projects.documentations/documentations/${project.artifactId}/" />
		</links>

		<menu name="Documentation" >
			<item href="readme.html" name="readme" />
		</menu>
		<menu ref="reports" inherit="bottom" />
	</body>
</project>
