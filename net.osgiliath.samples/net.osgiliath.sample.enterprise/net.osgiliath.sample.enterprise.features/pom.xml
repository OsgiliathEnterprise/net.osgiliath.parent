<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>net.osgiliath.samples</groupId>
    <artifactId>net.osgiliath.sample.enterprise</artifactId>
    <version>0.2.4-SNAPSHOT</version>
  </parent>
  <artifactId>net.osgiliath.sample.enterprise.features</artifactId>
  	<name>Helloworld enterprise feature (application definition)</name>
	<description>Deployment descriptor for enterprise webapp sample</description>
	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-artifacts</id>
						<phase>package</phase>
						<goals>
							<goal>attach-artifact</goal>
						</goals>
						<configuration>
							<artifacts>
								<artifact>
									<file>${project.build.directory}/classes/${project.artifactId}.xml</file>
									<type>xml</type>
									<classifier>features</classifier>
								</artifact>
								<artifact>
									<file>${project.build.directory}/classes/${project.artifactId}.transport.cfg</file>
									<type>cfg</type>
									<classifier>transport</classifier>
								</artifact>
							</artifacts>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>net.osgiliath.features</groupId>
			<version>${project.version}</version>
			<artifactId>net.osgiliath.feature.webservices</artifactId>
			<type>xml</type>
			<classifier>features</classifier>
		</dependency>
		<dependency>
			<groupId>net.osgiliath.features</groupId>
			<version>${project.version}</version>
			<artifactId>net.osgiliath.feature.routes</artifactId>
			<type>xml</type>
			<classifier>features</classifier>
		</dependency>
		<dependency>
			<groupId>net.osgiliath.features</groupId>
			<version>${project.version}</version>
			<artifactId>net.osgiliath.feature.security</artifactId>
			<type>xml</type>
			<classifier>features</classifier>
		</dependency>
		<dependency>
			<groupId>net.osgiliath.samples</groupId>
			<version>${project.version}</version>
			<artifactId>net.osgiliath.sample.webapp.features</artifactId>
			<type>xml</type>
			<classifier>features</classifier>
		</dependency>
	</dependencies>
	<properties>
		<parent.project.basedir>${project.basedir}/..</parent.project.basedir>
	</properties>
</project>