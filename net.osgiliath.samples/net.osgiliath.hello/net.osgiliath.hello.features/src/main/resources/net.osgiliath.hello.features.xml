<features xmlns="http://karaf.apache.org/xmlns/features/v1.2.0" name="${project.artifactId}-${project.version}">
	<!-- TODO add your features here -->
	<repository>mvn:org.apache.karaf.features/standard/${karaf.version}/xml/features</repository>
	<repository>mvn:net.osgiliath.framework/net.osgiliath.features.karaf-features-full/${project.version}/xml/features</repository>
	
	<!-- Model -->
	<feature name="${project.groupId}.model" version="${project.version}">
		<feature version='${project.version}'>osgiliath-derby</feature>
		<feature version='${project.version}'>osgiliath-model</feature>
		<bundle>mvn:${project.groupId}/${project.groupId}.model.database/${project.version}/jar</bundle>
		<bundle>mvn:${project.groupId}/${project.groupId}.model.jpa/${project.version}/jar</bundle>
	</feature>
	<!-- UI -->
	<feature name="${project.groupId}.ui" version="${project.version}">
		<feature version='${karaf.version}'>war</feature>
		<bundle>mvn:${project.groupId}/${project.groupId}.ui/${project.version}/war</bundle>
	</feature>
	
	<!-- CDI -->
	<feature name="${project.groupId}.business.itests.cdi" version="${project.version}">
		<feature version='${project.version}'>osgiliath-business</feature>
		<feature version='${project.version}'>${project.groupId}.model</feature>
		<bundle>mvn:${project.groupId}/${project.groupId}.business.spi/${project.version}/jar</bundle>
		<bundle>file:${project.parent.basedir}/${project.groupId}.business/${project.groupId}.business.impl.cdi/target/${project.parent.artifactId}.business.impl.cdi-${project.version}.jar</bundle>
	</feature>
	<feature name="${project.groupId}.business.cdi" version="${project.version}">
		<feature version='${project.version}'>osgiliath-business</feature>
		<feature version='${project.version}'>${project.groupId}.model</feature>
		<bundle>mvn:${project.groupId}/${project.parent.artifactId}.business.spi/${project.version}/jar</bundle>
		<bundle>mvn:${project.groupId}/${project.parent.artifactId}.business.impl.cdi/${project.version}/jar</bundle>
	</feature>
	<feature name="${project.groupId}.route.cdi" version="${project.version}">
		<feature version='${project.version}'>osgiliath-full</feature>
		<feature version='${karaf.version}'>war</feature>
		<configfile finalname="/etc/${project.groupId}.cfg">mvn:${project.groupId}/${project.artifactId}/${project.version}/cfg/camel</configfile>
		<feature version='${osgiliath.framework.maven.version}'>osgiliath-routes</feature>
		<feature version='${project.version}'>${project.groupId}.business.cdi</feature>
		<bundle>mvn:${project.groupId}/${project.groupId}.routes.cdi/${project.version}/jar</bundle>
	</feature>
	<feature name="${project.groupId}.full.cdi" version="${project.version}">
		<feature version='${project.version}'>${project.groupId}.business.cdi</feature>
		<feature version='${project.version}'>${project.groupId}.route.cdi</feature>
		<feature version='${project.version}'>${project.groupId}.ui</feature>
	</feature>


	<!-- Blueprint -->
	<feature name="${project.groupId}.business.itests.blueprint" version="${project.version}">
		<feature version='${project.version}'>osgiliath-business</feature>
		<feature version='${project.version}'>${project.groupId}.model</feature>
		<bundle>mvn:${project.groupId}/${project.groupId}.business.spi/${project.version}/jar</bundle>
		<bundle>file:${project.parent.basedir}/${project.groupId}.business/${project.groupId}.business.impl.blueprint/target/${project.parent.artifactId}.business.impl.blueprint-${project.version}.jar</bundle>
	</feature>
	<feature name="${project.groupId}.business.blueprint" version="${project.version}">
		<feature version='${project.version}'>osgiliath-business</feature>
		<feature version='${project.version}'>${project.parent.artifactId}.model</feature>
		<bundle>mvn:${project.parent.groupId}/${project.parent.artifactId}.business.spi/${project.version}/jar</bundle>
		<bundle>mvn:${project.parent.groupId}/${project.groupId}.business.impl.blueprint/${project.version}/jar</bundle>
	</feature>
	<feature name="${project.groupId}.route.blueprint" version="${project.version}">
		<feature version='${project.version}'>osgiliath-full</feature>
		<configfile finalname="/etc/${project.parent.artifactId}.cfg">mvn:${project.groupId}/${project.artifactId}/${project.version}/cfg/camel</configfile>
		<feature version='${osgiliath.framework.maven.version}'>osgiliath-routes</feature>
		<feature version='${project.version}'>${project.groupId}.business.blueprint</feature>
		<bundle>mvn:${project.groupId}/${project.groupId}.routes.blueprint/${project.version}/jar</bundle>
	</feature>
	<feature name="${project.groupId}.full.blueprint" version="${project.version}">
		<feature version='${project.version}'>${project.groupId}.business.blueprint</feature>
		<feature version='${project.version}'>${project.groupId}.route.blueprint</feature>
		<feature version='${project.version}'>${project.parent.artifactId}.ui</feature>
	</feature>
</features>
